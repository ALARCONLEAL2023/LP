<?xml version="1.0"?>
<configuration>


  <configSections>
    <!-- configuracion de la vista -->
    <section name="ViewConfig" type="Tenaris.Tamsa.View.Sea.Model.Configuration.ViewConfiguration, Tenaris.Tamsa.View.Sea.Model" />
    
    <!-- log de la vista -->
    <section name="log" type="Tenaris.Library.Log.LogConfiguration, Tenaris.Library.Log" />

    <!-- configuracion del security modo cliente -->
    <section name="Tenaris.Library.Security" 
             type="Tenaris.Library.Proxy.Factories.GenericProxyFactoryConfigurationSection, Tenaris.Library.Proxy"/>

    <section name="SeaManager"
             type="Tenaris.Library.Proxy.Factories.GenericProxyFactoryConfigurationSection, Tenaris.Library.Proxy"/>



  </configSections>


  <connectionStrings>
    <add name="dbLevel2" connectionString="Application Name=SeaView;Data Source= localhost;Initial Catalog=Level2_LinePipe;Persist Security Info=True; Integrated Security=SSPI;MultipleActiveResultSets=True; Asynchronous Processing=true;"/>
  </connectionStrings>

  <!-- configuracion de la vista -->
  <ViewConfig DskMgr="true"
              Language="es-MX"
              DBConnection="dbLevel2"
              AreaCode="COFI"
              SeaMachine="SEA"
              />

  <!-- Configuracion security modo cliente -->
  <Tenaris.Library.Security
     url="tcp://localhost:8041/Tenaris.Service.Security.soap"
     instanceType="Tenaris.Service.Security.Shared.ISecurityService, Tenaris.Service.Security.Shared"
     aliveInterval="0"
     validateConnection="true"
     singleInstance="true"
     forumPresent="false"
     isTargetManager="false">
    <Redundancy>
    </Redundancy>
  </Tenaris.Library.Security>

  <SeaManager
   instanceType="Tenaris.Tamsa.Manager.Sea.Shared.ISeaManager, Tenaris.Tamsa.Manager.Sea.Shared"
   aliveInterval="5000"
   singleInstance="true"
   validateConnection="true">
    <Redundancy>
      <Address url="tcp://127.0.0.1:33337/SeaManager.soap" forumPresent="false" isTargetManager="true"/>
    </Redundancy>
  </SeaManager>
  
  <!-- configuracion del log de la vista -->
  <log
    maxFileSize="8096"
    msgFormat="{Timestamp:HH:mm.ss.fff} ; {Level,-7} ; {Message} ; {MethodName}"
    logLevel="Debug"
    traceAttributeLogEnabled="true"
    logBaseName="SeaView"
    path="..\..\..\Logs\view\SeaView\"
    logAssemblyLoad="false"/>

  <!--
    Configuracion de remoting
    Usada para la comunicacion con manager
    Usada por la security
  -->
  <system.runtime.remoting>
    <application name="Tenaris.SeaView">
      <channels>
        <channel ref="tcp" port="0" bindTo="127.0.0.1">
          <clientProviders>
            <provider type="Tenaris.Library.Proxy.Remoting.ClientRemotingInterceptorProvider, Tenaris.Library.Proxy"/>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </clientProviders>
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
