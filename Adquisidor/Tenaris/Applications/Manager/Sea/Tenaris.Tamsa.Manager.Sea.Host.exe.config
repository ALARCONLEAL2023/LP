<?xml version="1.0"?>
<configuration>

  <!-- esta seccion debe ser la primera antes de todo -->
  <configSections>

    <section name="SeaManager"
             type="Tenaris.Library.Framework.Factory.FactoryConfiguration, Tenaris.Library.Framework" />

    <section name="SeaConfiguration"
             type="Tenaris.Tamsa.Manager.Sea.Config.SeaManagerConfig, Tenaris.Tamsa.Manager.Sea"/>

    <section name="ManagerBaseConfiguration"
             type="Tenaris.Manager.Forum.Shared.Configuration.ManagerBaseConfiguration, Tenaris.Manager.Forum.Shared" />

    <section name="HandshakeManager"
             type="Tenaris.Library.Proxy.Factories.GenericProxyFactoryConfigurationSection, Tenaris.Library.Proxy"/>

    <section name="CommandManager"
             type="Tenaris.Library.Proxy.Factories.GenericProxyFactoryConfigurationSection, Tenaris.Library.Proxy"/>

    <section name="Tenaris.Manager.Tracking"
             type="Tenaris.Library.Proxy.Factories.GenericProxyFactoryConfigurationSection, Tenaris.Library.Proxy"/>

    <section name="ProductionManager" 
             type="Tenaris.Library.Proxy.Factories.GenericProxyFactoryConfigurationSection, Tenaris.Library.Proxy"/>


    <section name="log" type="Tenaris.Library.Log.LogConfiguration, Tenaris.Library.Log"/>

  </configSections>

  <connectionStrings>
    <add name="Level2" connectionString="Application Name=SeaManager;Data Source=localhost;Initial Catalog=Level2_LinePipe;Integrated Security=SSPI;Persist Security Info=True;MultipleActiveResultSets=True;" providerName="System.Data.SqlClient" />
  </connectionStrings>

  <!-- Configuration used by factory to create the manager -->
  <SeaManager
    factoryType="Tenaris.Tamsa.Manager.Sea.SeaManagerFactory, Tenaris.Tamsa.Manager.Sea"
    isSingleton="True"
    sectionName="ManagerBaseConfiguration"
    />

  <ManagerBaseConfiguration
    areaCode="COFI"
    defaultConnectionStringName="Level2"
    />

  <SeaConfiguration
    appName="SEA"
   />


  <HandshakeManager
   instanceType="Tenaris.Manager.Handshake.Shared.IHandshakeManager, Tenaris.Manager.Handshake.Shared"
   aliveInterval="5000"
   singleInstance="true"
   validateConnection="true">
    <Redundancy>
      <Address url="tcp://127.0.0.1:9111/HandshakeManager.soap" forumPresent="false" isTargetManager="true"/>
    </Redundancy>
  </HandshakeManager>

  <CommandManager
   instanceType="Tenaris.Manager.Command.Shared.ICommandManager, Tenaris.Manager.Command.Shared"
   aliveInterval="5000"
   singleInstance="true"
   validateConnection="true">
    <Redundancy>
      <Address url="tcp://127.0.0.1:49200/CommandManager.soap" forumPresent="false" isTargetManager="true"/>
    </Redundancy>
  </CommandManager>

  <Tenaris.Manager.Tracking
      instanceType="Tenaris.Manager.Tracking.Shared.ITrackingManager, Tenaris.Manager.Tracking.Shared"
      aliveInterval="5000"
      singleInstance="true"
      validateConnection="true">
    <Redundancy>
      <Address url="tcp://127.0.0.1:9501/TrackingManager.soap" forumPresent="false" isTargetManager="true"/>
    </Redundancy>
  </Tenaris.Manager.Tracking>

  <ProductionManager
    instanceType="Tenaris.Manager.Production.Shared.IProductionManager, Tenaris.Manager.Production.Shared"
    aliveInterval="5000"
    singleInstance="true"
    validateConnection="true">
    <Redundancy>
      <Address url="tcp://127.0.0.1:8040/ProductionManager.soap" forumPresent="false" isTargetManager="true"/>
    </Redundancy>
  </ProductionManager>
  


  <!--Remoting configuration -->
  <system.runtime.remoting>
    <application name="Server">
      <channels>
        <channel ref="tcp" port="22701" bind to="127.0.0.1">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
          <clientProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </clientProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>

  <log
    maxFileSize="8192"
    msgFormat="{Timestamp:HH:mm.ss.fff} ; {Level,-7} ; {Message} ; {MethodName}"
    logLevel="Debug"
    traceAttributeLogEnabled="false"
    logBaseName="SeaManager"
    path="..\..\..\Logs\Manager\SeaManager\"
    additionalLogDestination="Console"
  />

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
