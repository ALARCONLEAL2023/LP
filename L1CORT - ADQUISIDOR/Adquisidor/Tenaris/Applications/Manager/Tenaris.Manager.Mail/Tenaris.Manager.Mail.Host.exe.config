<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log" type="Tenaris.Library.Log.LogConfiguration, Tenaris.Library.Log"/>    
    <section name="Tenaris.Manager.Mail" type="Tenaris.Library.Framework.Factory.FactoryConfiguration, Tenaris.Library.Framework"/>    
    <section name="ManagerBaseConfiguration" type="Tenaris.Manager.Forum.Shared.Configuration.ManagerBaseConfiguration, Tenaris.Manager.Forum.Shared"/>
  </configSections>

  <connectionStrings>    
    <add name="LINEA1" connectionString="Application Name=MailManager;Data Source=10.92.70.120;Initial Catalog=AusV1;User ID=Level2;Password=Lineas123;Persist Security Info=True;MultipleActiveResultSets=False;" providerName="System.Data.SqlClient"/>
  </connectionStrings>

  <ManagerBaseConfiguration areaCode="LINEA1" defaultConnectionStringName="LINEA1"/>

  <Tenaris.Manager.Mail factoryType="Tenaris.Manager.Mail.Factory.MailManagerFactory, Tenaris.Manager.Mail" isSingleton="True">
    <MailManager hostSMTP="smtp.tamsa.techint.net " portSMTP="25"/>
  </Tenaris.Manager.Mail>

  <!--Remoting configuration. This can be placed in a separate file named remoting.config-->
  <system.runtime.remoting>
    <application name="Server">
      <channels>
        <channel ref="tcp" port="50053">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
          <clientProviders>
            <provider type="Tenaris.Library.Proxy.Remoting.ClientRemotingInterceptorProvider, Tenaris.Library.Proxy"/>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </clientProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>

   <log 
		maxFileSize="8912"
		maxFileCount="10"
		logLevel="Debug"
		msgFormat="{TypeChar} {Timestamp:yyyy-MM-dd HH:mm:ss} [{ThreadId,-5:d5}] {MethodName} {IdentString} {Message}"
		noQueue="true"
		path="..\..\..\Logs\Manager\Tenaris.Manager.Mail\"
		traceAttributeLogEnabled="true"
		logBaseName="Tenaris.Manager.Mail"
		additionalLogDestination="Console"
		logAssemblyLoad="false"
	  />



  <startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
